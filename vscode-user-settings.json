{
  // Editor Appearance and Behavior
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Copilot Theme",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.db": "sqlite-viewer.option"
  },
  "editor.fontFamily": "'Cascadia Code PL', monospace, 'Courier New'",
  "editor.fontSize": 13,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "expand",
  "editor.largeFileOptimizations": false,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.rulers": [160],
  "editor.suggestSelection": "first",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.inlineSuggest.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,

  // Files and File Types
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.autoSave": "afterDelay",

  // Language Specific Settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[go][python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // JavaScript and JSX specific settings
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript", "javascriptreact"],
  "files.associations": { "*.js": "javascriptreact" },
  "javascript.suggest.autoImports": true,
  "javascript.validate.enable": false,
  "editor.foldingStrategy": "indentation",

  // Terminal Settings
  "terminal.integrated.fontFamily": "'Cascadia Code PL', 'MesloLGS NF', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.explorerKind": "external",

  // Security Settings
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.banner": "never",

  // Additional Tools and Features
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "task.problemMatchers.neverPrompt": {
    "shell": true
  },
  "git.openRepositoryInParentFolders": "never",
  "bazel.buildifierExecutable": "/Users/svishnu/go/bin/buildifier",
  "bazel.buildifierFixOnFormat": true,
  "bazel.executable": "/opt/homebrew/bin/bazel",
  "bazel.enableCodeLens": true,
  "go.toolsManagement.autoUpdate": true,
  "go.delveConfig": {},
  "githubPullRequests.pullBranch": "never",
  "redhat.telemetry.enabled": true
}
